DEBUG=True

# Security
SECRET_KEY=
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Database
# For local development use SQLite:
DATABASE_URL=sqlite:///./ibc_play.db
# For production use PostgreSQL:
# DATABASE_URL=

# External APIs
COINGECKO_API_URL=https://api.
